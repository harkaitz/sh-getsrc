##:
#h: Usage: $0 NAME
#h:
#h: Create empty directory in $GETSRC_DIR.
##:
getsrc_newdir() {
    local name="$1"
    if test ! -n "${name}";then
        echo "${SCRNAME}: error: Please specify a name." >&2
        return 1
    fi
    mkdir -p "${GETSRC_DIR}/${name}"
    echo "${GETSRC_DIR}/${name}"
}
getsrc_newdir_show_variables() {
    printf '%-20s : %s\n' GETSRC_DIR   "${GETSRC_DIR}"
}
getsrc_newdir_calc_variables() {
    GETSRC_DIR="${GETSRC_DIR:-${HOME}/.local/src}"
}
## -----------------------------------------------------------------------------
SCRNAME="`basename "$0"`"
getsrc_newdir_calc_variables
if test @"${SCRNAME}" = @"getsrc-newdir";then
    if test -n "$1";then
        getsrc_newdir "$@"
    else
        sed -n 's/^ *#h: \{0,1\}//p' "$0" | sed "s|\\\$0|`basename $0`|g"
        echo ""
        sed -n 's/^ *#l: \{0,2\}//p' "$0"
    fi
fi
